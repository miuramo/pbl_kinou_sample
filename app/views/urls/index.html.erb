<p id="notice"><%= notice %></p>

<%= link_to "Back to UserIndex", user_path(@user.id) %>
<h1>Urls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>User Name</th>
      <th>NumCapture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.name %></td>
        <td><%= url.url %></td>
        <td><%= url.user.name %></td>
        <td><%= url.captures.size %></td>
        <td><%= link_to 'Show', user_url_path(url.user, url) %></td>
        <td><%= link_to 'Edit', edit_user_url_path(url.user, url) %></td>
        <td><%= link_to 'Destroy', user_url_path(url.user, url), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_user_url_path %>
